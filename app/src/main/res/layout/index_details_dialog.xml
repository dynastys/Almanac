<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/air_quality"
            android:scaleType="fitXY"
            android:id="@+id/index_details_img"

            />
        <TextView
            android:id="@+id/index_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="室内空气质量标准："
            android:textColor="#ff5f5e5e"
            android:textSize="16sp"
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/index_details_tv"
            android:textSize="12sp"
            android:textColor="#949494"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="@string/wind_power_popup_tv"
            android:lineSpacingExtra="8dp"
            />

        <Button
            android:id="@+id/i_see_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_know_btn_bg"
            android:textColor="@color/white"
            android:text="我知道了"
            android:textSize="@dimen/sp_18"
            android:padding="@dimen/dp_10"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>