<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white_A30"
    android:orientation="vertical">

    <TextView
        android:id="@+id/shop_list_bar"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@drawable/gradual_change" />

    <include layout="@layout/head" />

    <com.xy.xylibrary.refresh.SuperEasyRefreshLayout
        android:id="@+id/shop_list_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/serve_txt"
                android:padding="@dimen/dp_10"
                android:background="@color/white"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/nb_text_common_h1"
                />
            <View
                android:layout_width="match_parent"
                android:background="@color/nb_divider_narrow"
                android:layout_height="0.4dp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:overScrollMode="never"
                 />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/instrument"
                android:padding="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/nb_text_common_h1"
                />
            <View
                android:layout_width="match_parent"
                android:background="@color/nb_divider_narrow"
                android:layout_height="0.4dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/list_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never" />


            </RelativeLayout>
            <com.check.ox.sdk.LionStreamerView
                android:id="@+id/TMBrView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:TMBr_size="TMBr" />
        </LinearLayout>

    </com.xy.xylibrary.refresh.SuperEasyRefreshLayout>
</LinearLayout>