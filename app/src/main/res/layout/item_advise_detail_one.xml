<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/ripple_bg4"
    >

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/iv_title_rel"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <ImageView
            android:id="@+id/iv_title"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/shape_line_drawable"
            android:scaleType="fitXY"
            android:visibility="gone"
             />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/iv_title"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="清洁很重要 但要适度才能不伤肌肤"
            android:textColor="@color/text_black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/iv_title"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="新浪"
                android:textColor="#b6b6b6"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-03-20"
                android:textColor="#b6b6b6"
                android:textSize="13sp"
                android:visibility="gone" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/iv_title_r_rel"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <ImageView
            android:id="@+id/iv_title_r"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/shape_line_drawable"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
              />

        <TextView
            android:id="@+id/tv_title_r"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/iv_title_r"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="清洁很重要 但要适度才能不伤肌肤"
            android:textColor="@color/text_black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/iv_title_r"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_from_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="新浪"
                android:textColor="#b6b6b6"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-03-20"
                android:textColor="#b6b6b6"
                android:textSize="13sp"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/tv_title_x_lin"
        >
        <TextView
            android:id="@+id/tv_title_x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/iv_title_r"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="清洁很重要 但要适度才能不伤肌肤"
            android:textColor="@color/text_black"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/dp_4"
            >
            <ImageView
                android:id="@+id/iv_image_x1"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_margin="@dimen/dp_4"
                android:background="@drawable/shape_line_drawable"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:layout_weight="1"
              />
            <ImageView
                android:id="@+id/iv_image_x2"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_margin="@dimen/dp_4"
                android:background="@drawable/shape_line_drawable"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/iv_image_x3"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_margin="@dimen/dp_4"
                android:background="@drawable/shape_line_drawable"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:layout_weight="1"
              />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_title_r"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_from_x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="新浪"
                android:textColor="#b6b6b6"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-03-20"
                android:textColor="#b6b6b6"
                android:textSize="13sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/tv_title_d_lin"
        >
        <TextView
            android:id="@+id/tv_title_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/iv_title_r"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="清洁很重要 但要适度才能不伤肌肤"
            android:textColor="@color/text_black"
            android:textSize="16sp" />
        <FrameLayout
            android:id="@+id/iv_listitem_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:visibility="gone"
            android:scaleType="centerCrop" />
        <ImageView
            android:id="@+id/iv_image_d"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="@dimen/dp_4"
            android:background="@drawable/shape_line_drawable"
            android:scaleType="fitXY"
            android:layout_weight="1"
             />
        <LinearLayout
            android:id="@+id/tv_from_d_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_from_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="新浪"
                android:textColor="#b6b6b6"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-03-20"
                android:textColor="#b6b6b6"
                android:textSize="13sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/nb_divider_narrow"
        />
</LinearLayout>