<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/ll_content"
        android:layout_width="0dp"
        android:layout_height="162dp"
        android:orientation="vertical"
        android:paddingVertical="11dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="46dp"
            android:layout_height="36dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp"
             />

        <TextView
            android:id="@+id/tv_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/iv_header"
            android:layout_marginTop="7dp"
            android:textColor="#FF5F5E5E"
            android:textSize="14sp"
            tools:text="适宜衬衫" />

        <TextView
            android:id="@+id/tv_header_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_header_title"
            android:layout_marginTop="13dp"
            android:layout_marginRight="17dp"
            android:layout_marginLeft="17dp"
            android:textColor="#FF949494"
            android:textSize="13sp"
            tools:text="今天走酷炫科技范儿？还是文艺小清新？" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="10dp"
        android:background="@drawable/back_view"
        app:layout_constraintBottom_toBottomOf="@id/ll_content"
        />

</android.support.constraint.ConstraintLayout>