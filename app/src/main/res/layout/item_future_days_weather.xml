<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/weather_day_lin"
    android:gravity="center_horizontal"
    android:background="@drawable/selector_lin_c"
    android:orientation="vertical">

    <TextView
        android:paddingTop="10dp"
        android:id="@+id/tv_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="今天"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="11月25日"
        android:textColor="@color/white"
        android:textSize="11sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="4dp"
        android:background="#808080" />

    <ImageView
        android:id="@+id/iv_weather_img_day"
        tools:background="@mipmap/icon"
        android:layout_width="20dp"
        android:layout_height="18dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/tv_weather_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="多云"
        android:textSize="12sp" />


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <ImageView
        android:id="@+id/iv_weather_img_night"
        android:layout_width="20dp"
        android:layout_height="18dp"
        android:layout_marginTop="5dp"
        tools:background="@mipmap/icon" />

    <TextView
        android:id="@+id/tv_weather_night"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="多云"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="南风"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/tv_wind_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="3级"
        android:textSize="11sp" />

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="4dp"
        app:cardElevation="0dp"

        >
        <TextView
            android:id="@+id/tv_air_quality"
            android:layout_width="30dp"
            android:layout_height="16dp"
            android:gravity="center"
            android:background="@drawable/search30"
            android:text="差"
            android:maxLength="2"
            android:textColor="#ffffff"
            android:textSize="10sp" />
    </android.support.v7.widget.CardView>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="#808080" />
</LinearLayout>
