<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center_vertical"
      android:layout_marginLeft="@dimen/dp_5"
      >
      <ImageView
          android:id="@+id/notification_small_icon"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:src="@mipmap/icon"
          android:layout_margin="@dimen/dp_5"
          />
      <TextView
          android:id="@+id/notification_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/app_name"
          android:textColor="@color/nb_text_common_h2"
          android:textSize="15sp"
          android:layout_weight="1"
          />
      <TextView
          android:id="@+id/notification_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="07:16"
          android:textColor="@color/nb_text_common_h2"
          android:padding="@dimen/dp_10"
          android:textSize="12sp"
          />
  </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_5"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/notification_wether_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上海 多云"
            android:textStyle="bold"
            android:textColor="@color/tab_color"
            android:textSize="15sp"
            />
        <ImageView
            android:id="@+id/notification_wether_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        >
        <TextView
            android:id="@+id/notification_wether_dec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="今日温度30℃,天气炎热，建议着短衫、短裙、短裤、薄型T恤衫等清凉夏季服装。"
            android:textColor="@color/tab_color"
            android:textSize="13sp"
            android:paddingRight="@dimen/dp_10"
            />
    </LinearLayout>

</LinearLayout>