<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    android:orientation="vertical"
    app:cardCornerRadius="8dp"
    android:background="@color/white"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/grad_item_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/grad_item_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:ellipsize="end"
            android:lineSpacingExtra="4px"
            android:maxLines="2"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/nb_text_common_h1"
            android:textSize="13sp"
            android:text="标题标题标题标题标题标题标题标题标题标题"
             />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/white_A30"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/download"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="下载"
                android:gravity="center"
                android:textColor="@color/nb_text_common_h1"
                android:textSize="@dimen/sp_12"
                />
            <TextView
                android:layout_width="0.6dp"
                android:layout_height="match_parent"
                android:background="@color/white_A30"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:id="@+id/give_a_like"
                android:gravity="center"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/likenum_int"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13"
                    android:gravity="center"
                    android:textColor="@color/nb_text_common_h1"
                    android:textSize="@dimen/sp_12"
                    android:drawableLeft="@drawable/ic_favorite_border_black"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>