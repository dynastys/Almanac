<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="49dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/weather_day_lin"
    android:gravity="center_vertical"
    android:background="@drawable/selector_lin_c"
    android:orientation="horizontal">

    <TextView
        android:padding="10dp"
        android:id="@+id/list_tv_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="今天"
        android:minEms="4"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        android:layout_margin="@dimen/dp_5"
        >
        <TextView
            android:id="@+id/list_tv_air_quality"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:background="@drawable/search30"
            android:text="差"
            android:maxLength="2"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/list_iv_weather_img_day"
        tools:background="@mipmap/icon"
        android:layout_width="32dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/list_tv_weather_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="多云"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/list_tv_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="24-22°"
        android:layout_marginRight="10dp"
        android:textSize="15sp" />

</LinearLayout>
