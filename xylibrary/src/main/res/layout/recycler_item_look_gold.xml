<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/ripple_bg4">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_10"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_margin="@dimen/dp_5"
                >
                <TextView
                    android:id="@+id/look_gold_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="任务1"
                    android:textColor="#ff212121"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/look_gold_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="每天查看天气变化，轻松拿现金"
                android:textColor="#ffadadad"
                android:layout_marginLeft="@dimen/dp_5"
                android:textSize="13sp"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:layout_alignParentRight="true"
            >
            <TextView
                android:id="@+id/look_gold_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:drawableLeft="@drawable/task_list_icon"
                android:text="+38888元"
                android:textColor="#ffff6b48"
                android:layout_alignParentRight="true"
                android:drawablePadding="@dimen/dp_5"
                android:textSize="13sp"
                />
            <TextView
                android:id="@+id/look_gold_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-08-13 11:31:35"
                android:layout_below="@+id/look_gold_money"
                android:textColor="#ffadadad"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_alignParentRight="true"
                android:textSize="13sp"
                />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/white_A30"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        />
</LinearLayout>