<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/status_bar_type"
        android:layout_width="match_parent"
        android:layout_height="10dp"

        />

    <com.xy.xylibrary.view.MagicButton
        android:id="@+id/magic_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/status_bar_type"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_below="@+id/magic_btn"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:src="@drawable/login_icon" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/wechat_login"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:background="@drawable/wx_bg"
            android:gravity="center">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/wx_icon"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:text="微信登录"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/phone_login"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/mobile"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/mbile_icon"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="@string/phone_login"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>