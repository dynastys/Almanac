<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:cardCornerRadius="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/sign_ad_dialog_cancel"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/list_detail_icon"
                android:layout_margin="@dimen/dp_10"
                tools:ignore="VectorDrawableCompat" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/invite_ad_img"
            android:scaleType="fitXY"
            android:id="@+id/sign_img"

            />
        <TextView
            android:id="@+id/sign_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="登录登录"
            android:textColor="#ff5f5e5e"
            android:textSize="16sp"
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sign_tv"
            android:textSize="12sp"
            android:textColor="#949494"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="登录登录"
            android:lineSpacingExtra="8dp"
            />

        <Button
            android:id="@+id/sign_see_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/withdraw_search_5"
            android:textColor="@color/white"
            android:text="立即登录"
            android:textSize="@dimen/sp_18"
            android:padding="@dimen/dp_10"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>