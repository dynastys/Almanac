<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
   >
    <LinearLayout
        android:id="@+id/task_item_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_10"
        android:background="@drawable/ripple_bg4"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_margin="@dimen/dp_5"
                >
                <TextView
                    android:id="@+id/task_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="任务1"
                    android:textColor="#ff212121"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/task_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:drawableLeft="@drawable/task_list_icon"
                    android:text="388"
                    android:textColor="#ffff6b48"
                    android:padding="@dimen/dp_5"
                    android:drawablePadding="@dimen/dp_5"
                    android:textSize="13sp"
                    />
                <TextView
                    android:id="@+id/task_active"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/task_list_icon"
                    android:text="38"
                    android:textColor="#ffff6b48"
                    android:padding="@dimen/dp_5"
                    android:drawablePadding="@dimen/dp_5"
                    android:textSize="13sp"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/task_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="每天查看天气变化，轻松拿现金"
                android:textColor="#ffadadad"
                android:layout_marginLeft="@dimen/dp_5"
                android:textSize="13sp"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/receive_btn"
                android:layout_width="77dp"
                android:layout_height="30dp"
                android:text="立即查看"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:layout_centerVertical="true"
                android:textSize="13sp"
                android:background="@drawable/search_5"
                />
            <com.xy.xylibrary.view.CustomHorizontalProgresNoNum
                android:id="@+id/horizontalProgress1"
                android:progress="0"
                app:HorizontalProgresReachColor="#3585FE"
                app:HorizontalProgresUnReachColor="#E9E9E9"
                app:HorizontalProgresTextColor="#ffffff"
                android:layout_centerVertical="true"
                android:layout_width="80dp"
                android:layout_height="30dp"/>
            <ImageView
                android:id="@+id/indicate_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                 android:visibility="gone"
                android:layout_marginTop="@dimen/dp_10"
                 android:layout_marginLeft="30dp"
                />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_below="@+id/task_item_lin"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/white_A30"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        />
    <com.xy.xylibrary.view.AcodeEmojiView
        android:id="@+id/view_point"
        android:layout_width="match_parent"
        android:layout_height="70dp">
    <TextView
        android:id="@+id/btn3"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
      />
</com.xy.xylibrary.view.AcodeEmojiView>
</RelativeLayout>